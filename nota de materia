#include <iostream>



using namespace std;

int main()
{
    int a,b,c,d,e,f,g,p,n;
cout<<"ingrese la nota de su primer parcial: ";
cin>>a ;
cout<<"ingrese la nota de su segundo parcial: ";
cin>>b;
cout<<"ingrese la nota de su tercer parcial: ";
cin>>c;
d=(a+b+c)/3*0.4;
cout<<"la nota de parciales es: "<<d<<endl;
cout<<"ingrese la nota de su examen final: ";
cin>>e ;
f=e*0.4;
cout<<"su nota del examen final es: "<<f<<endl;
cout<<"ingrese la nota de su proyecto final: ";
cin>>g;
p=g*0.2;
cout<<"la nota final de su proyecto es: "<<p<<endl;
n=p+f+d ;
cout<<"su nota final de la materia es: "<<n;

    return 0;
}
