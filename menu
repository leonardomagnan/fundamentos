// menu.cpp : Defines the entry point for the console application.
//
#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;

int main()
{
    int cantidad, opcion;
    float total;
    
    cout<<"----------------MENÚ----------------"<<endl;
    cout<<"1) Hamburguesas simples:     3    Bs."<<endl;
    cout<<"2) Hamburguesas con queso:   5    Bs."<<endl;
    cout<<"3) Papas fritas:             2    Bs."<<endl;
    cout<<"4) Soda:                     2.50 Bs"<<endl;
    cout<<"0) Salir"<<endl;
    cout<<"Opción: ";
    cin>>opcion;
    switch (opcion)
    {
        case 1: cout<<"Ingrese cantidad: ";
                cin>>cantidad;
                total=cantidad*3;
                break; 
        case 2: cout<<"Ingrese cantidad: ";
                cin>>cantidad;
                total=cantidad*5;
                break;
        case 3: cout<<"Ingrese cantidad: ";
                cin>>cantidad;
                total=cantidad*2;
                break;
        case 4: cout<<"Ingrese cantidad: ";
                cin>>cantidad;
                total=cantidad*2.50;
                break;
        case 0: cout<<"Salir";
                break;
        default: cout<<"Error, no existe la opción.";
                break;
    }
    
    cout<<"El total es: "<<total; 
    return 0;
	getch() ;




}
